<body>

  <table class="pagehead">
    <tr class="pagehead">
      <td class="pagehead_left">
        <h2>The Lancashireman's family history</h2>
      </td>
      <td class="pagehead_right">
      </td>
    </tr>
  </table>
  <hr/>

  <h1>[% name %] [% year_range %]</h1>
  <hr/>

  <table class="general-info">
    <tr class="general-info">
      <td class="general-info-caption">
        Father
      </td>
      <td class="general-info-value">
        [% father %]
      </td>
    </tr>
    <tr class="general-info">
      <td class="general-info-caption">
        Mother
      </td>
      <td class="general-info-value">
        [% mother %]
      </td>
    </tr>
  </table>

  <table class="family">
    <tr class="family">
      <td class="siblings">
        <h4>Siblings:</h4>
        <ul class="siblings">
[% s = 0 -%]
[% WHILE s < n_sibs -%]
          <li class="siblings">
            [% sibs.$s %]
          </li>
[% s = s + 1 -%]
[% END -%]
        </ul>
      </td>
      <td class="children">
        <h4>Children:</h4>
        <ul class="children">
[% c = 0 -%]
[% WHILE c < n_children -%]
          <li class="children">
            [% children.$c %]
          </li>
[% c = c + 1 -%]
[% END -%]
        </ul>
      </td>
    </tr>
  </table>

  <h3>Timeline</h3>      
  <table class="timeline">
[% e = 0 -%]
[% os = "even" -%]
[% WHILE e < n_events -%]
    <tr class="timeline">
      <td class="timeline-date-[% os %]">
        [% e_date.$e %]
      </td>
      <td class="timeline-event-[% os %]">
        [% e_type.$e %]
      </td>
      <td class="timeline-info-[% os %]">
        [% e_info.$e %]
      </td>
      <td class="timeline-source-[% os %]">
        [% e_source.$e %]
      </td>
    </tr>
[% e = e + 1 -%]
[% IF ( os == "even" ); os = "odd"; ELSE; os = "even"; END -%]
[% END -%]
  </table>
